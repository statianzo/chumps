        <code>@@streams = []
@@price = 500.0

get '/stocks', provides: 'text/event-stream' do
  stream :keep_open do |out|
    @@streams.push(out)
    out.callback { @@streams.delete(out) }
  end
end

def notify(data, name=nil)
  @@streams.each do |out|
    out << "event: #{name}\n" if name
    out << "data: #{data}\n\n"
  end
end

Thread.new do
  while true
    sleep rand(2)
    notify((@@price += rand(3)), 'AAPL')
    notify(rand(2) == 1 ? 'Buy!' : 'Sell!')
  end
end </code>
