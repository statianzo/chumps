        <code>var all = new List&lt;IWebSocketConnection>();
var url = "ws://localhost:8181";
var server = new WebSocketServer(url);
server.Start(socket =>
{
  socket.OnOpen = () =>
  {
    all.Add(socket);
  };
  socket.OnClose = () =>
  {
    all.Remove(socket);
  };
  socket.OnMessage = message =>
  {
    all.ToList()
      .ForEach(s => s.Send(message));
  };
});</code>
